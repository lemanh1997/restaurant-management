<dt class="row row-no-gutters" id = "<%= "menu-#{menu.id}" %>" >
  <div class="col-xs-6 col-md-4 title-menu">
    <span class="text-center"><%= menu.food.name %></span>
  </div>
  <div class="col-xs-6 col-md-4 title-menu">
    <span class="text-center"><%= menu.date_at %></span>
  </div>
  <div class="col-xs-6 col-md-4 row-select">
    <% if menu.date_at >= Time.now.to_date %>
      <%= link_to edit_menu_path(menu), class: "btn btn-default" do %>
        <i class="fa fa-cog"></i>
        <span><%= t "buttons.edit" %></span>
      <% end %>
    <% end %>

    <%= link_to menu, method: :delete, data: {confirm: t("messages.delete")}, remote: true, class: "btn btn-danger" do %>
      <i class="fa fa-trash-o" aria-hidden="true"></i>
      <span><%= t "buttons.delete" %></span>
    <% end %>
  </div>
</dt>
