<dt class="row row-no-gutters" id ="<%= "food-#{food.id}" %>" >
  <div class="col-xs-12 col-md-8 title-food">
    <span class="text-center"><%= food.name %></span>
  </div>
  <div class="col-xs-6 col-md-4 row-select">
    <%= link_to edit_food_path(food), class: "btn btn-default" do %>
      <i class="fa fa-cog"></i>
      <span><%= t "buttons.edit" %></span>
    <% end %>
    <%= link_to food, method: :delete, data: {confirm: t("messages.delete")}, remote: true, class: "btn btn-danger" do %>
      <i class="fa fa-trash-o" aria-hidden="true"></i>
      <span><%= t "buttons.delete" %></span>
    <% end %>
  </div>
</dt>
