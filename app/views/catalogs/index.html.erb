<% provide :title, t("catalogs.index.name_page") %>

<div class="title-name">
  <span class="content-name"><%= t "catalogs.index.name_page" %></span>

  <% if check_admin_login? %>
    <%= link_to new_catalog_path, class: "btn button-add-catalog" do %>
      <i class="fa fa-plus" aria-hidden="true"></i>
      <span><%= t "catalogs.index.button_create" %></span>
    <% end %>
  <% end %>
</div>

<div class="grid-container">
  <%= render @catalogs %>
</div>
