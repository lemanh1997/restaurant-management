<dt class="row row-no-gutters" id = "<%= "discount-#{discount.id}" %>" >
  <div class="col-xs-6 col-md-4 title-menu">
    <span class="text-center"><%= discount.name %></span>
  </div>
  <div class="col-xs-6 col-md-4 title-menu">
    <span class="text-center"><%= discount.discount_value %></span>
  </div>
  <div class="col-xs-6 col-md-4 row-select-discount">
    <%= link_to edit_discount_path(discount), class: "btn btn-default" do %>
      <i class="fa fa-cog"></i>
      <span><%= t "buttons.edit" %></span>
    <% end %>

    <%= link_to discount, method: :delete, data: {confirm: t("messages.delete")}, remote: true, class: "btn btn-danger" do %>
      <i class="fa fa-trash-o" aria-hidden="true"></i>
      <span><%= t "buttons.delete" %></span>
    <% end %>
  </div>
</dt>
