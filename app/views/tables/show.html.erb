<% provide :title, t("tables.show.name_page") %>
<% provide :button_name, t("tables.show.button_create") %>

<div class="title-name">
  <span class="content-name"><%= t("tables.show.name_table", number: @table.id) %></span>
  <% if user_signed_in? %>
    <%= link_to new_table_booking_path(@table.id), class: "btn button-add-catalog" do %>
      <i class="fa fa-plus" aria-hidden="true"></i>
      <span><%= t "tables.show.button_create" %></span>
    <% end %>
  <% end %>
</div>
<div class="table-content">
  <p><%= @table.description %></p>
</div>
